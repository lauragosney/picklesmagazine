

<p>
 <%= link_to "Back to all products", products_path %>
</p>

<div class="product_hero">

  <div class="product_image">
    <%= image_tag @product.image_1.large %>
  </div>

  <div class="product_details">
    <h3><%= @product.title %></h3>
    <%= number_to_currency @product.price_in_pounds, unit: "Â£" %>

    <%= simple_form_for [@product, @order_item] do |f| %>
      <% if @product.product_variants.any? %>
         <div class="size">
           <%= f.input :product_variant_id, as: :select, collection: @product.product_variants.all, label_method: :select_text, label: "Select size", include_blank: false %>

        </div>
      <% end %>

      <%= f.input :quantity %>
      <%= f.button :submit, "Add to cart", class: "button_primary" %>
    <% end %>
  </div>

</div>




<div class="container">
  <div class="featured">
    <h3>Honing the details</h3>
      <p><%= simple_format @product.description %></p>
    </div>
</div>

<div class="container">
  <div class="product_carousel">
    <%= image_tag @product.image_2.medium %>
    <%= image_tag @product.image_3.medium %>
    <%= image_tag @product.image_4.medium %>
  </div>
</div>

<div class="container">
  <div class="quote">
    <h3><%= @product.quote %></h3>
  </div>
</div>




<section class="container">
  <div class="featured">
    <h3>You might also like...</h3>
    <div class="product_grid_4">
      <%= render partial: "product", collection: @featured_products %>
    </div>
  </div>
</section>


