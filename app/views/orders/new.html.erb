<h2>Checkout</h2>

Total number of items: <%= @order.total %>



<%= simple_form_for @order do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.input :email %>
  <%= f.input :country %>
  <%= f.input :address_1 %>
  <%= f.input :address_2 %>
  <%= f.input :city %>
  <%= f.input :postal_code %>


  <%= f.button :submit,"Submit order" %>

<%end%>
