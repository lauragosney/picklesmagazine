<div class="header2">
  <h1 class="logo">
    <%= link_to root_path do %>
      <%= image_tag "pickles-logo-small.svg" %>
      <% end %>
    </h1>
</div>

<div class="confirmation">
  <h2>Thanks for your order</h2>
  <p>Your order has been received. <br>Please allow for 7-10 days for delivery</p>





<div>
  <%= @order.first_name %> <%= @order.last_name %>
</div>

<div>
  <%= @order.email %>
</div>

<div>
  Total: <%= number_to_currency @order.price_in_pounds, unit: "£"  %>
</div>

<% @order.order_items.each do |item| %>

    <div><%= image_tag item.product.image_1.thumb, width: "50" %>
    <%= item.product.title %>
    <%= number_to_currency item.product.price_in_pounds, unit: "£" %>

    <% if item.product_variant.present? %>
      <%= item.product_variant.size %>
    <% else %>
     -
    <% end %>
    <%= item.quantity %>
<% end %>
</div>

<div class="button_secondary">
  <%= link_to root_path do %>
    Back to home<%= image_tag "arrow_icon.svg",width: 30 %>
  <% end %>
</div>
</div>
