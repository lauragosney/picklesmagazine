<section class="main">

<h2>Cart</h2>

<% if @current_cart.order_items.any? %>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Size</th>
      <th>Qty</th>
    </tr>
  </thead>

  <tbody>
    <% @current_cart.order_items.each do |item| %>

      <tr>
        <td><%= image_tag item.product.image_1.thumb, width: "50" %>
          <%= item.product.title %>
        </td>
        <td><%= item.product.price %></td>

        <% if item.product_variant.present? %>
          <td> <%= item.product_variant.size %></td>
        <% else %>
        <td> - </td>
        <% end %>

        <td><%= simple_form_for [item.product, item] do |f| %>
          <%= f.input :quantity %>
          <%= f.button :submit, "Update cart"%>
        <% end %>

        <td><%= link_to "Remove", product_order_item_path(item.product, item), method: :delete %></td>


      </tr>

    <% end %>

  </tbody>

</table>

<% else %>
  <p>There are no items in your cart</p>
<% end %>

</section>
