<header>
  <div class="header_black">
    <div class="menu-toggle">
      <%= image_tag "menu-icon.svg", class: "icon" %>
      <%= image_tag "menu-close.svg", class: "close" %>
    </div>

    <h1 class="logo">
      <%= link_to root_path do %>
        <%= image_tag "pickles_logo_update.svg" %>
      <% end %>
    </h1>

    <div class="cart">
      <%= link_to cart_path do %>
        <%= image_tag "cart.svg" %>
        ( <%= @current_cart.total_quantity %> )
        <!-- <%= number_to_currency @current_cart.total_price_in_pounds,  unit: "£" %> -->
      <% end %>
    </div>
  </div>


  <div class="menu">

      <nav>
        <%= link_to "Home", root_path, class: "homehover" %>
        <%= link_to "Events", events_path, class: "eventhover" %>
        <%= link_to "Shop", products_path, class: "shophover" %>
        <%= link_to "Stories", stories_path, class: "storieshover" %>
        <%= link_to "About", about_path, class: "abouthover" %>
        <%= link_to "Contact", contact_path, class: "contacthover" %>
      </nav>

      <div class="navigation-overlay-bg-home-hover"></div>
      <div class="navigation-overlay-bg-event-hover"></div>
       <div class="navigation-overlay-bg-shop-hover"></div>
       <div class="navigation-overlay-bg-stories-hover"></div>
       <div class="navigation-overlay-bg-about-hover"></div>
       <div class="navigation-overlay-bg-contact-hover"></div>
  </div>
</header>

<div class="basket container_top">


  <div class="intro">
    <h2>Your basket</h2>
  </div>


<% if @current_cart.order_items.any? %>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Size</th>
      <th>Qty</th>
    </tr>
  </thead>



  <tbody>

    <% @current_cart.order_items.each do |item| %>

      <tr>
        <td class="basket_item"><%= image_tag item.product.image_1.thumb, width: "50" %>
          <%= item.product.title %>
        </td>

        <td> <%= number_to_currency item.product.price_in_pounds, unit: "£" %></td>


        <% if item.product_variant.present? %>
          <td> <%= item.product_variant.size %></td>
        <% else %>
        <td> - </td>
        <% end %>



            <td class="quantity_basket">
              <%= simple_form_for [item.product, item] do |f| %>
                <%= f.input :quantity, label: false %>
                <%= f.button :submit, "Update", class: "button_basket" %>
              <% end %>
            </td>

        <td class="price_basket">

          <div>  <%= link_to "Remove", product_order_item_path(item.product, item), method: :delete %> </div>

        </td>




      </tr>


      <% end %>

  </tbody>

</table>

<div class="total_price_basket">

  <p class="subtotal">
    Subtotal: <%= number_to_currency @current_cart.total_price_in_pounds,  unit: "£" %>
  </p>
  <p class="delivery">
    Delivery: £3.00
  </p>
  <p class="total">
    Total: <%= number_to_currency @current_cart.price_in_pounds,  unit: "£" %>
  </p>

</div>



<%= link_to "Continue to checkout", new_order_path, class: "button_primary" %>

<div class="basket_empty">
  <div class="button_secondary_left">
    <%= link_to products_path do %>
      <%= image_tag "arrow_icon_left.svg",width: 30 %> Back to shop
    <% end %>
  </div>

</div>



<% else %>

<% if flash[:success].present? %>
  <div class="success">
    <%= flash[:success] %>
  </div>
<% end %>

<% if flash[:error].present? %>
  <div class="error">
    <%= flash[:error] %>
  </div>
<% end %>
<div class="basket_empty">
  <p>There are no items in your cart</p>
  <div class="button_secondary">
    <%= link_to products_path do %>
      Start shopping <%= image_tag "arrow_icon.svg",width: 30 %>
    <% end %>
  </div>

</div>


<% end %>




</div>
