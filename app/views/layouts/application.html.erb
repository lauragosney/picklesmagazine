<!DOCTYPE html>
<html>
  <head>
    <title>Picklesmagazine</title>
    <%= favicon_link_tag 'favicon.ico' %>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://js.stripe.com/v3/"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <header>
      <div class="menu-toggle">
        <%= image_tag "menu-icon.svg", class: "icon" %>
        <%= image_tag "menu-close.svg", class: "close" %>
      </div>
      <div class="cart">
        <%= link_to cart_path do %>
          <%= image_tag "cart.svg" %>
          <!-- <%= @current_cart.total_quantity %>  -->
          Basket: <%= number_to_currency @current_cart.total_price_in_pounds,  unit: "£" %>

          <% end %>
      </div>
    </header>

    <div class="menu">

      <nav>
        <%= link_to "Home", root_path, class: "homehover" %>
        <%= link_to "Search", "#", class: "searchhover" %>
        <%= link_to "Shop", products_path, class: "shophover" %>
        <%= link_to "Stories", stories_path, class: "storieshover" %>
        <%= link_to "About", about_path, class: "abouthover" %>
        <%= link_to "Contact", contact_path, class: "contacthover" %>
      </nav>

	     <div class="navigation-overlay-bg-shop-hover"></div>
       <div class="navigation-overlay-bg-stories-hover"></div>
       <div class="navigation-overlay-bg-about-hover"></div>
       <div class="navigation-overlay-bg-contact-hover"></div>
     </div>

      <% if flash[:success].present? %>
        <div class="success">
          <%= flash[:success] %>
        </div>
      <% end %>

      <% if flash[:error].present? %>
        <div class="error">
          <%= flash[:error] %>
        </div>
      <% end %>

      <main>
        <%= yield %>
      </main>

      <% if flash[:success].present? %>
        <div class="newsletter_flash">
          <%= flash[:success] %>
        </div>
      <% end %>

      <% if flash[:error].present? %>
        <div class="newsletter_flash">
          <%= flash[:error] %>
        </div>
      <% end %>


      <section class="container">
        <div class= "newsletter_copy">
          <h3>Join the Pickles squad</h3>
          <p> Sign up to our Newsletter to hear about new product releases, learn about our design process, and everything else going on behind the scenes at Pickles magazine. </p>
        </div>

          <div class="newsletter_form">
            <%= simple_form_for :newsletter, url: newsletter_path, remote: true do |f| %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :email %>
            <%= f.button :submit,"Sign me up", class: "button_primary"  %>
            <% end %>
          </div>
      </section>


  <footer class="footer">

    <p>Pickles Magazine © 2012 | Designed by Read | Subscriptions </p>

  </footer>


  </body>
</html>
